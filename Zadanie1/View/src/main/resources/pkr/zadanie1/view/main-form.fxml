<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pkr.zadanie1.view.UserActionController">
    <children>
        <Label alignment="CENTER" contentDisplay="TOP" prefHeight="44.0" prefWidth="302.0"
               text="Zadanie 1 - Podstawy kryptografii" textAlignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="20.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="200.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="15.0" prefHeight="15.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextArea fx:id="plainText" prefHeight="200.0" prefWidth="370.0" wrapText="true"
                          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                          GridPane.valignment="CENTER">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </TextArea>
                <TextArea fx:id="cipherText" prefHeight="200.0" prefWidth="370.0" wrapText="true"
                          GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                          GridPane.valignment="CENTER">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </TextArea>
                <Label text="Tekst jawny" GridPane.columnIndex="1" GridPane.halignment="CENTER">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Label>
                <Label text="Szyfrogram" GridPane.columnIndex="3" GridPane.halignment="CENTER">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Label>
                <Button fx:id="readPlainText" mnemonicParsing="false" onAction="#readPlainTextFromFile"
                        prefHeight="30.0" prefWidth="230.0" text="Wczytywanie tekstu jawnego z pliku"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="readCipherText" mnemonicParsing="false" onAction="#readCipherTextFromFile"
                        prefHeight="30.0" prefWidth="230.0" text="Wczytywanie szyfrogramu z pliku"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="savePlainText" mnemonicParsing="false" onAction="#savePlainTextToFile" prefHeight="30.0"
                        prefWidth="230.0" text="Zapis tekstu jawnego do pliku" GridPane.columnIndex="3"
                        GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="saveCipherText" mnemonicParsing="false" onAction="#saveCipherTextToFile"
                        prefHeight="30.0" prefWidth="230.0" text="Zapis szyfrogramu do pliku" GridPane.columnIndex="3"
                        GridPane.halignment="CENTER" GridPane.rowIndex="4">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="readBinFile" mnemonicParsing="false" onAction="#readBinaryFile" prefHeight="30.0"
                        prefWidth="230.0" text="Wycztywanie pliku binarnego" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="5">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="saveBinFile" mnemonicParsing="false" onAction="#saveBinaryFile" prefHeight="30.0"
                        prefWidth="230.0" text="Zapis pliku binarnego" GridPane.columnIndex="3"
                        GridPane.halignment="CENTER" GridPane.rowIndex="5">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="350.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="350.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="20.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="120.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextArea fx:id="userInputKey" prefHeight="50.0" prefWidth="150.0" wrapText="true"
                          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </TextArea>
                <Label text="Klucz do szyfrowania / deszyfrowania" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                       GridPane.rowIndex="1">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Label>
                <Button fx:id="cipher" mnemonicParsing="false" onAction="#cipherTheInputPlainText" prefHeight="30.0"
                        prefWidth="180.0" text="Szyfrowanie" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.rowIndex="4">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Button>
                <Button fx:id="decipher" mnemonicParsing="false" onAction="#decipherTheCipherText" prefHeight="30.0"
                        prefWidth="180.0" text="Deszyfrowanie" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                        GridPane.rowIndex="4">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Button>
                <Label text="Menu" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                       GridPane.rowIndex="1">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Label>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2"
                      GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="saveKeyToFile" mnemonicParsing="false" onAction="#saveUserKey" prefHeight="30.0"
                                prefWidth="180.0" text="Zapis klucza do pliku" textAlignment="CENTER">
                            <font>
                                <Font name="Times New Roman" size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="readKeyFromFile" alignment="CENTER" contentDisplay="CENTER"
                                mnemonicParsing="false" onAction="#readUserKey" prefHeight="30.0" prefWidth="180.0"
                                text="Wycztanie klucza z pliku" textAlignment="CENTER">
                            <font>
                                <Font name="Times New Roman" size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </Button>
                        <MenuButton contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="180.0"
                                    text="Wybór długości klucza">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#generate128Key" text="Klucz 128 bitowy."/>
                                <MenuItem mnemonicParsing="false" onAction="#generate192Key" text="Klucz 192 bitowy."/>
                                <MenuItem mnemonicParsing="false" onAction="#generate256Key" text="Klucz 256 bitowy."/>
                            </items>
                            <font>
                                <Font name="Times New Roman" size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </MenuButton>
                    </children>
                </VBox>
                <Label text="Czas wykonania operacji" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                       GridPane.rowIndex="3">
                    <font>
                        <Font name="Times New Roman" size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="operationTime" alignment="CENTER" editable="false" maxHeight="40.0" maxWidth="230.0"
                           GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                           GridPane.valignment="CENTER">
                    <font>
                        <Font name="Times New Roman" size="14.0"/>
                    </font>
                </TextField>
            </children>
        </GridPane>
        <Button fx:id="authors" mnemonicParsing="false" onAction="#showAuthors" text="Autorzy" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman Italic" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
